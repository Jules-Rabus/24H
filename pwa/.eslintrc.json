{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "semi": false,
        "tabWidth": 2,
        "singleQuote": true,
        "printWidth": 80,
        "endOfLine": "auto",
        "arrowParens": "always",
        "plugins": ["prettier-plugin-tailwindcss"]
      },
      {
        "usePrettierrc": false
      }
    ]
  }
}
